<Application x:Class="RiskierWas.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:RiskierWas.ViewModels"
             ShutdownMode="OnMainWindowClose" StartupUri="MainWindow.xaml"
             xmlns:views="clr-namespace:RiskierWas.Views">
    <Application.Resources>
        <!-- DataTemplates for ViewModel -> View mapping -->
        <DataTemplate DataType="{x:Type vm:StartViewModel}">
            <views:StartView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:GameViewModel}">
            <views:GameView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EditorViewModel}">
            <views:EditorView />
        </DataTemplate>

        
    </Application.Resources>
</Application>
