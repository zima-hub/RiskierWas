<UserControl x:Class="RiskierWas.Views.EditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:RiskierWas.Models"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left list -->
        <StackPanel Grid.Column="0" Margin="8">
            <TextBlock Text="Fragen" Foreground="White" FontSize="20" Margin="0,0,0,8"/>
            <ListBox ItemsSource="{Binding Questions}" SelectedItem="{Binding SelectedQuestion}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding Selected}" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding Text}" Width="240" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Button Content="Neue Frage" Command="{Binding AddQuestionCommand}" Padding="8,6" Margin="0,0,8,0"/>
                <Button Content="Löschen" Command="{Binding RemoveQuestionCommand}" Padding="8,6"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Button Content="JSON exportieren…" Command="{Binding ExportJsonCommand}" Padding="8,6" Margin="0,0,8,0"/>
                <Button Content="Zurück" Command="{Binding BackCommand}" Padding="8,6"/>
            </StackPanel>
        </StackPanel>

        <!-- Editor right -->
        <StackPanel Grid.Column="1" Margin="8" DataContext="{Binding SelectedQuestion}">
            <TextBlock Text="Fragetext" Foreground="White" FontSize="16"/>
            <TextBox Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="80" TextWrapping="Wrap"/>

            <TextBlock Text="Antworten" Foreground="White" FontSize="16" Margin="0,12,0,0"/>
            <ItemsControl ItemsSource="{Binding Answers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:Answer}">
                        <Border Margin="0,6,0,6" Padding="8" CornerRadius="8" Background="#111827">
                            <DockPanel>
                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                                    <CheckBox Content="richtig" IsChecked="{Binding Correct}" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <Button Content="Entfernen" Command="{Binding DataContext.RemoveAnswerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" Padding="6,4"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBox Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,4"/>
                                    <TextBox Text="{Binding Comment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,0"/>
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Content="Antwort hinzufügen" Command="{Binding DataContext.AddAnswerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" Padding="8,6" Margin="0,8,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
