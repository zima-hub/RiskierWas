<UserControl x:Class="RiskierWas.Views.EditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid Background="#0D0D0D">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="*"/>
            <!-- Inhalt -->
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="12,12,12,0" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal">
                <Button Content="← Zurück"
                        Command="{Binding BackCommand}"
                        Margin="0,0,16,0" Padding="10,6"
                        ToolTip="Zur Startansicht zurückkehren"/>

                <Button Content="Alle abwählen"
                        Command="{Binding DeselectAllCommand}"
                        Margin="0,0,8,0" Padding="10,6"
                        ToolTip="Alle Fragen für das nächste Spiel abwählen"/>

                <Button Content="20 zufällige Fragen wählen"
                        Command="{Binding SelectRandom20Command}"
                        Margin="0,0,16,0" Padding="10,6" Click="Button_Click"
                        ToolTip="Zufällig 20 Fragen für das nächste Spiel auswählen"/>

                <Button Content="Speichern"
                        Command="{Binding SaveCommand}"
                        Margin="0,0,8,0" Padding="10,6"
                        ToolTip="Erst nach dem Speichern bleibt die Auswahl dauerhaft erhalten!"/>

                <Button Content="Speichern unter…"
                        Command="{Binding SaveAsCommand}"
                        Margin="0,0,16,0" Padding="10,6"
                        ToolTip="Fragenliste in einer neuen Datei speichern"/>
                <Button Content="Neue Frage erstellen"
                        Command="{Binding AddQuestionCommand}"
                        Padding="10,6"
                        ToolTip="Eine neue Frage zur Liste hinzufügen"/>
            </StackPanel>
        </DockPanel>

        <!-- Inhalt: zwei Spalten -->
        <Grid Grid.Row="1" Margin="12,8,12,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <!-- Fragenliste -->
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <!-- Details -->
            </Grid.ColumnDefinitions>

            <!-- Linke Spalte: Fragenliste (ListBox scrollt selbst) -->
            <Border Grid.Column="0" Background="#0F172A" CornerRadius="12" Padding="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Fragen (Häkchen = im nächsten Spiel - Speichern!)"
                               Foreground="White" Margin="0,0,0,8" FontWeight="Bold"
                               ToolTip="Hier Fragen für das nächste Spiel auswählen und anschließend speichern nicht vergessen!"/>

                    <ListBox Grid.Row="1"
                             x:Name="QuestionsList"
                             ItemsSource="{Binding Questions}"
                             SelectedItem="{Binding SelectedQuestion}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling"
                             VirtualizingPanel.ScrollUnit="Pixel"
                             ScrollViewer.CanContentScroll="True">
                        <!-- Entf-Taste löscht die aktuell ausgewählte Frage -->
                        <ListBox.InputBindings>
                            <KeyBinding Key="Delete" Command="{Binding RemoveQuestionCommand}"/>
                        </ListBox.InputBindings>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <!-- Genau EIN Root-Element: DockPanel -->
                                <DockPanel Margin="0,4">
                                    <!-- ✕-Button zum direkten Löschen dieses Items -->
                                    <Button Content="✕"
                                            DockPanel.Dock="Right"
                                            Command="{Binding DataContext.RemoveQuestionItemCommand,
                                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Width="24" Height="24"
                                            Margin="6,0,0,0"
                                            ToolTip="Frage löschen"/>

                                    <CheckBox IsChecked="{Binding Selected}"
                                              Margin="0,0,8,0"
                                              VerticalAlignment="Center"
                                              ToolTip="Ausgewählt = im nächsten Spiel dabei"/>

                                    <TextBlock Text="{Binding Text}"
                                               Foreground="White"
                                               TextWrapping="NoWrap"
                                               TextTrimming="CharacterEllipsis"
                                               VerticalAlignment="Center"/>

                                    <!-- Kontextmenü (optional) -->
                                    <DockPanel.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Frage löschen"
                                                      Command="{Binding DataContext.RemoveQuestionItemCommand,
                                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                        </ContextMenu>
                                    </DockPanel.ContextMenu>
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- rechte Spalte: Detailbereich (scrollbar) -->
            <Border Grid.Column="2" Background="#0F172A" CornerRadius="12" Padding="12">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Fragetext" Foreground="White" FontSize="18" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding SelectedQuestion.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True" TextWrapping="Wrap"
                                 MinHeight="80" VerticalScrollBarVisibility="Auto"/>

                        <TextBlock Text="Antworten" Foreground="White" FontSize="18" Margin="0,16,0,6"/>
                        <ItemsControl ItemsSource="{Binding SelectedQuestion.Answers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- EIN Root pro Antwortzeile -->
                                    <DockPanel Margin="0,6">
                                        <Button Content="Entfernen"
                                                Command="{Binding DataContext.RemoveAnswerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                DockPanel.Dock="Right"
                                                Margin="8,0,0,0"/>

                                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="8,0,0,0">
                                            <CheckBox IsChecked="{Binding Correct}" VerticalAlignment="Center" Content="richtig" Foreground="White"/>
                                        </StackPanel>

                                        <StackPanel Margin="0,0,8,0">
                                            <TextBox Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     MinWidth="300"/>
                                            <TextBox Text="{Binding Comment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     Margin="0,4,0,0"
                                                     MinWidth="300"
                                                     AcceptsReturn="True"
                                                     TextWrapping="Wrap"
                                                     VerticalScrollBarVisibility="Auto"/>
                                        </StackPanel>
                                    </DockPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Antwort hinzufügen"
                                    Command="{Binding AddAnswerCommand}"
                                    Padding="10,6"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
