<UserControl x:Class="RiskierWas.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:RiskierWas"
             mc:Ignorable="d">

    <Grid>
        <!-- Converter nur hier registrieren (Keys passen zu den Bindings unten) -->
        <Grid.Resources>
            <local:ReferenceEqualsConverter x:Key="RefEq"/>
            <local:CorrectToSymbolConverter x:Key="CorrectToSymbolConverter"/>
            <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <local:CorrectToTextConverter x:Key="CorrectToTextConverter"/>
            <local:CorrectToBrushConverter x:Key="CorrectToBrushConverter"/>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Teamleiste -->
            <RowDefinition Height="Auto"/>
            <!-- Frage -->
            <RowDefinition Height="*"/>
            <!-- Antworten -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Teams und Punkte -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <ItemsControl ItemsSource="{Binding Teams}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="12" Padding="12" Margin="8" Background="#111111" BorderBrush="#444" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Score}" Foreground="White" FontSize="24"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- N채chster Antwortwert -->
            <Border CornerRadius="12" Padding="12" Margin="8,0,0,0" Background="#1F2937">
                <StackPanel>
                    <TextBlock Text="N채chste richtige Antwort:" Foreground="White"/>
                    <TextBlock Text="{Binding NextPoints}" Foreground="LightGreen" FontSize="24"/>
                </StackPanel>
            </Border>
            <!-- Aktuelle Rundenpunkte -->
            <Border CornerRadius="12" Padding="12" Margin="8,0,0,0" Background="#1F2937">
                <StackPanel>
                    <TextBlock Text="Punkte aktuelle Runde:" Foreground="White"/>
                    <TextBlock Text="{Binding CurrentTeam.PendingScore}" Foreground="LightBlue" FontSize="24"/>
                </StackPanel>
            </Border>

        </StackPanel>

        <!-- Frage -->
        <Border Grid.Row="1" CornerRadius="12" Padding="12" Background="#1F2937">
            <TextBlock Text="{Binding CurrentQuestion.Text}" TextWrapping="Wrap" Foreground="White" FontSize="20"/>
        </Border>

        <!-- Antworten -->
        <Border Grid.Row="2" Margin="0,8,0,8" Background="#0F172A" CornerRadius="12" Padding="6">
            <ItemsControl ItemsSource="{Binding CurrentQuestion.Answers}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4" Rows="4"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="6" CornerRadius="12">
                            <Button Padding="12"
        Command="{Binding DataContext.RevealAnswerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
        CommandParameter="{Binding}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#1F1F1F"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderBrush" Value="#444"/>
                                        <Setter Property="BorderThickness" Value="1"/>

                                        <Style.Triggers>
                                            <!-- Bereits aufgedeckt -> deaktivieren -->
                                            <DataTrigger Binding="{Binding Revealed}" Value="True">
                                                <!-- Button nicht deaktivieren, sondern Klicks ignorieren -->
                                                <Setter Property="IsHitTestVisible" Value="False"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                            </DataTrigger>

                                            <!-- Richtig -->
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Revealed}" Value="True"/>
                                                    <Condition Binding="{Binding Correct}"  Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" Value="LimeGreen"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                            </MultiDataTrigger>

                                            <!-- Falsch -->
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Revealed}" Value="True"/>
                                                    <Condition Binding="{Binding Correct}"  Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" Value="#CC0000"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <!-- WICHTIG: Ein Button darf nur EIN Kind haben -> Inhalt kapseln -->
                                <Button.Content>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Text}" FontSize="18" TextWrapping="Wrap" TextAlignment="Center"/>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                  Visibility="{Binding Revealed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock Text="{Binding Correct, Converter={StaticResource CorrectToSymbolConverter}}"
                   FontSize="28" Margin="0,4,8,0"/>
                                            <TextBlock Text="{Binding Correct, Converter={StaticResource CorrectToTextConverter}}"
                   FontSize="16"/>
                                        </StackPanel>

                                        <TextBlock Text="{Binding Comment}" FontSize="12" Foreground="White"
                 TextWrapping="Wrap" TextAlignment="Center"
                 Visibility="{Binding Revealed, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <!-- Footer / Steuerung -->
        <DockPanel Grid.Row="3" Panel.ZIndex="10" Margin="0,12,0,0">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding InfoLine}" Margin="0,0,16,2"/>
                <TextBlock>
                    <Run Text="Punkte aktuelle Runde: "/>
                    <Run Text="{Binding CurrentTeam.PendingScore}"/>
                </TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Weitergeben"    Command="{Binding PassTurnCommand}"   Margin="6,0"/>
                <Button Content="N채chste Frage"  Command="{Binding NextQuestionCommand}" Margin="6,0"/>
                <Button Content="Zur체ck"         Command="{Binding BackToStartCommand}" Margin="6,0"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
