<UserControl x:Class="RiskierWas.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:RiskierWas"
             mc:Ignorable="d">

    <!-- Converter LOKAL registrieren -->
    <UserControl.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:CorrectToTextConverter x:Key="CorrectToTextConverter"/>
        <local:CorrectToSymbolConverter x:Key="CorrectToSymbolConverter"/>
        <local:CorrectToBrushConverter x:Key="CorrectToBrushConverter"/>
        <!-- Falls du noch den ReferenceEqualsConverter brauchst:
        <local:ReferenceEqualsConverter x:Key="ReferenceEqualsConverter"/> -->
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Teams und Kopfzeile -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <ItemsControl ItemsSource="{Binding Teams}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="12" Padding="12" Margin="8"
                                Background="#111111" BorderBrush="#444" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Score}" Foreground="White" FontSize="24"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Kachel: Nächste richtige Antwort -->
            <Border CornerRadius="12" Padding="12" Margin="8,0,0,0" Background="#1F2937">
                <StackPanel>
                    <TextBlock Text="Nächste richtige Antwort:" Foreground="White"/>
                    <TextBlock Text="{Binding NextPoints}" Foreground="LightGreen" FontSize="24"/>
                </StackPanel>
            </Border>
            <Border CornerRadius="12" Padding="12" Margin="8,0,0,0" Background="#1F2937">
                <StackPanel>
                    <TextBlock Text="Punkte aktuelle Runde:" Foreground="White"/>
                    <TextBlock Text="{Binding CurrentRoundPoints}" Foreground="White" FontSize="24"/>
                </StackPanel>
            </Border>
            <!-- Kachel: verbleibende ✔ / ✖ -->
            <Border CornerRadius="12" Padding="12" Margin="8,0,0,0" Background="#1F2937">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                        <TextBlock Text="✔" Foreground="LightGreen" FontSize="22" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding RemainingCorrectCount}" Foreground="LightGreen" FontSize="22"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✖" Foreground="Tomato" FontSize="22" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding RemainingWrongCount}" Foreground="Tomato" FontSize="22"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Frage -->
        <Border Grid.Row="1" CornerRadius="12" Padding="12" Background="#1F2937">
            <TextBlock Text="{Binding CurrentQuestion.Text}" TextWrapping="Wrap" Foreground="White" FontSize="20"/>
        </Border>

        <!-- Antworten -->
        <Border Grid.Row="2" Margin="0,8,0,8" Background="#0F172A" CornerRadius="12" Padding="6">
            <ItemsControl ItemsSource="{Binding CurrentQuestion.Answers}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4" Rows="4"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="6" CornerRadius="12">
                            <Button Padding="12"
                                    Command="{Binding DataContext.RevealAnswerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#1F1F1F"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderBrush" Value="#444"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Revealed}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                            </DataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Revealed}" Value="True"/>
                                                    <Condition Binding="{Binding Correct}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" Value="LimeGreen"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                            </MultiDataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Revealed}" Value="True"/>
                                                    <Condition Binding="{Binding Correct}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" Value="#CC0000"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel>
                                    <TextBlock Text="{Binding Text}" FontSize="18" TextWrapping="Wrap" TextAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                                Visibility="{Binding Revealed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="{Binding Correct, Converter={StaticResource CorrectToSymbolConverter}}"
                                                   FontSize="28" Margin="0,4,8,0"/>
                                        <TextBlock Text="{Binding Correct, Converter={StaticResource CorrectToTextConverter}}"
                                                   FontSize="16"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Comment}" FontSize="12" Foreground="White"
                                               TextWrapping="Wrap" TextAlignment="Center"
                                               Visibility="{Binding Revealed, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <!-- Footer / Controls -->
        <DockPanel Grid.Row="3" Panel.ZIndex="10" Margin="0,12,0,0">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding InfoLine}" Margin="0,0,16,2"/>
                <TextBlock>
                    <Run Text="Punkte aktuelle Runde: "/>
                    <Run Text="{Binding CurrentTeam.PendingScore}"/>
                </TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Weitergeben" Command="{Binding PassTurnCommand}" Margin="6,0"/>
                <Button Content="Nächste Frage" Command="{Binding NextQuestionCommand}" Margin="6,0"/>
                <Button Content="Zurück" Command="{Binding BackToStartCommand}" Margin="6,0"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
